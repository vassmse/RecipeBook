<Page
    x:Class="RecipeBook.Views.PivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:RecipeBook.Views"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Uid="PivotPage">
            <PivotItem x:Uid="PivotItem_Main">
                <Frame>
                    <views:MainPage/>
                </Frame>
            </PivotItem>
            <PivotItem x:Uid="PivotItem_List">
                <Frame>
                    <views:RecipeList/>
                </Frame>
            </PivotItem>
            <PivotItem x:Uid="PivotItem_Detailed">
                <Frame>
                    <views:RecipeDetailed/>
                </Frame>
            </PivotItem>
            <!--TODO: fill pivotitems with view elements-->
        </Pivot>
    </Grid>
</Page>
